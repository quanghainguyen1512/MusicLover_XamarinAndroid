<?xml version="1.0" encoding="utf-8"?>

<resources>
    <attr format="reference" name="windowBackground"/>
    <attr format="reference" name="cardStyle"/>
    <attr format="reference" name="accentColor"/>
    <attr format="reference" name="iconColor"/>
    <attr format="reference" name="windowBackground"/>
    <attr format="reference" name="progressBackgroundColor"/>
    <attr format="reference" name="progressDrawable"/>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
<!--        <item name="cardStyle">@style/CardViewStyle.Light</item>-->
<!--        <item name="android">@color/colorAccent</item>-->
<!--        <item name="iconColor">@android:color/black</item>-->
        <item name="android:progressBackgroundTint">@color/progressBackgroundColorLight</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="android:textColorPrimary">@android:color/black</item>
<!--        <item name="progressDrawableWithBackground">@drawable/progress_drawable_withbackground</item>-->
    </style>


    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/window_background</item>
    </style>

    <style name="TextApperance.Album.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">29sp</item>
    </style>

    <style name="FABStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

</resources>